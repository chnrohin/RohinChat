<resources>
    <declare-styleable name="Divider">
        <attr name="boardType" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DrawableTextView">
        <attr name="bitmapSrc" format="reference" />
        <attr name="drawableSrc" format="reference" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
        <attr name="drawablePosition">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="drawablePadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TextContentLoadingProgressBar">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

</resources>