<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Fragment.Base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.chnrohin.rohinchat.common.design.recyclerview.HeaderRecyclerViewKt
        android:id="@+id/rv_social_list_contacts"
        android:name="com.github.chnrohin.rohinchat.contacts.ContactFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:listitem="@layout/social_recycler_contact"
        app:suwHeaderKt="@layout/social_recycler_suwheader_contacts" />

    <com.github.chnrohin.rohinchat.common.design.widget.SlideSideBar
        android:id="@+id/ssb_social_sideNavigation"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end" />

    <TextView
        android:id="@+id/tv_social_codePrompt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/main_shape_tv_contacts_code_prompt"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        android:visibility="invisible" />

</FrameLayout>