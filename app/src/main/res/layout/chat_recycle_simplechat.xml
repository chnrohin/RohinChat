<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout.Base.Click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:baselineAligned="true"
    android:orientation="horizontal"
    android:padding="@dimen/main_simple_chat_profile_pic_padding">

    <ImageView
        android:id="@+id/iv_main_simple_chat_profile_pic"
        android:layout_width="@dimen/main_simple_chat_profile_pic_width"
        android:layout_height="@dimen/main_simple_chat_profile_pic_height"
        android:layout_marginEnd="@dimen/main_simple_chat_profile_pic_vertical_margin"
        android:layout_marginStart="@dimen/main_simple_chat_profile_pic_vertical_margin"
        android:contentDescription="@string/simpleChat_profilePic"
        android:src="@drawable/main_icon_def_profilepic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_simple_chat_profile_pic_vertical_margin"
        android:layout_marginStart="@dimen/main_simple_chat_profile_pic_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_simple_chat_contacts"
                style="@style/TextView.Base.SimpleChat.Contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="@string/loading_network" />

            <TextView
                android:id="@+id/tv_main_simple_chat_timestamp"
                style="@style/TextView.Base.SimpleChat.Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/loading_network" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_main_simple_chat_message"
            style="@style/TextView.Base.SimpleChat.Message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/loading_network" />

    </LinearLayout>

</LinearLayout>