<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Fragment.Base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_item_margin_horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@drawable/common_selector_item_click_bg_color"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/user_me_profile_padding_vertical"
        android:paddingEnd="@dimen/user_me_profile_padding_vertical"
        android:paddingTop="@dimen/user_me_profile_padding_horizontal"
        android:paddingBottom="@dimen/user_me_profile_padding_horizontal">

        <ImageView
            android:id="@+id/iv_main_profilePic"
            android:layout_width="@dimen/user_me_profilePic_width"
            android:layout_height="@dimen/user_me_profilePic_height"
            android:src="@drawable/main_icon_def_profilepic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_me_nickname"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_main_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_me_user_id"
                android:textColor="@color/gray"
                android:textSize="14dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_main_myQrCode"
            android:layout_width="@dimen/user_me_my_qr_code_width"
            android:layout_height="@dimen/user_me_my_qr_code_height"
            android:src="@drawable/main_setting_my_qrcode" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_setting"
        style="@style/TextView.Base.Click.MainItemClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_item_margin_horizontal"
        android:drawableStart="@drawable/main_setting_icon_setting"
        android:drawablePadding="@dimen/user_me_item_padding_horizontal"
        android:text="@string/setting"
        android:textSize="@dimen/user_me_text_size" />

</LinearLayout>