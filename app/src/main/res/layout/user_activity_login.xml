<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".acts.user.UserActivity">

    <!-- 顶部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_account_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/close"
            android:src="@drawable/user_toolbar_icon_close_nor" />
    </LinearLayout>

    <com.github.chnrohin.rohinchat.common.design.widget.SlideViewPager
        android:id="@+id/svp_user_login_contentFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/user_login_widget_margin_top"
        android:layout_weight="8"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top" />

    <!-- 底部 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_account_retrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/user_login_widget_margin_right"
            android:text="@string/account_retrieve"
            android:textColor="@color/hyperlink" />

        <TextView
            android:id="@+id/tv_user_account_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_login"
            android:textColor="@color/hyperlink"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_user_account_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_register"
            android:textColor="@color/hyperlink"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>