<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Fragment.Base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_social_contactsProfilePic"
            android:layout_width="@dimen/social_profile_pic_width"
            android:layout_height="@dimen/social_profile_pic_height"
            android:src="@drawable/main_bot_nav_icon_me_nor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_social_remarkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_remark_name"
                android:textSize="@dimen/social_remark_name_text_size" />

            <TextView
                android:id="@+id/tv_social_chatId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_user_id"
                android:textColor="@color/gray"
                android:textSize="@dimen/social_chat_id_text_size" />

            <TextView
                android:id="@+id/tv_social_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_nickname"
                android:textColor="@color/gray"
                android:textSize="@dimen/social_nickname_text_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/gray"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_social_location"
            style="@style/TextView.Base.Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/social_location"
            android:textColor="@color/gray"
            android:textSize="@dimen/def_tv_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:orientation="vertical"
        android:paddingEnd="@dimen/view_padding_16"
        android:paddingStart="@dimen/view_padding_16">

        <Button
            android:id="@+id/btn_social_sendMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLogo"
            android:text="@string/social_sendMsg"
            android:textColor="@color/white"
            android:textSize="@dimen/def_btn_text_size" />

    </LinearLayout>

</LinearLayout>