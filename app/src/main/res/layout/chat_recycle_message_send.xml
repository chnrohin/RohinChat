<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chat_msgDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="11:45"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_chat_msgContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/chat_chatwith_shape_tv_background_contacts"
            android:padding="10dp"
            android:text="@string/loading_network"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_chat_contactsProfilePic"
            android:layout_width="@dimen/chat_msg_list_contacts_profile_pic_width"
            android:layout_height="@dimen/chat_msg_list_contacts_profile_pic_height"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:src="@drawable/main_icon_def_profilepic" />
    </LinearLayout>

</LinearLayout>