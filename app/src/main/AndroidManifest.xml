<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.chnrohin.rohinchat">

    <!-- &lt;!&ndash; 这个权限用于进行网络定位&ndash;&gt; -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- &lt;!&ndash; 这个权限用于访问GPS定位&ndash;&gt; -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- &lt;!&ndash; 用于访问wifi网络信息，wifi信息会用于进行网络定位&ndash;&gt; -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- &lt;!&ndash; 获取运营商信息，用于支持提供运营商信息相关的接口&ndash;&gt; -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- &lt;!&ndash; 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位&ndash;&gt; -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- &lt;!&ndash; 用于读取手机当前的状态&ndash;&gt; -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- &lt;!&ndash; 读取手机手机通讯录&ndash;&gt; -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- &lt;!&ndash; 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据&ndash;&gt; -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- &lt;!&ndash; 访问网络，网络定位需要上网&ndash;&gt; -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- &lt;!&ndash; 轨迹追踪新增权限 &ndash;&gt; -->
    <!-- &lt;!&ndash; 用于加快GPS首次定位&ndash;&gt; -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <!-- &lt;!&ndash; 用于Android M及以上系统，申请加入忽略电池优化白名单&ndash;&gt; -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <!-- <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission> -->
    <application
        android:name=".RohinChatApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".acts.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Activity.Base">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".acts.MainActivity"
            android:theme="@style/Activity.Base" />
        <activity
            android:name=".acts.user.UserActivity"
            android:theme="@style/Activity.Base" />
        <activity
            android:name=".acts.chat.ChatWithActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Activity.Base" />
        <activity
            android:name=".acts.chat.ChatInfoActivity"
            android:theme="@style/Activity.Base" />
        <activity
            android:name=".acts.search.SearchActivity"
            android:theme="@style/Activity.Base.Search" />
        <activity
            android:name=".acts.social.AddContactsActivity"
            android:theme="@style/Activity.Base" />
        <activity android:name=".acts.social.ContactsDetailActivity" />

    </application>

</manifest>